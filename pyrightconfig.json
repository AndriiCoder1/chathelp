{
    "venvPath": ".",
    "venv": "venv",
    "pythonPath": "./venv/Scripts/python.exe",
    "analysis": {
        "autoImportCompletions": true,
        "useLibraryCodeForTypes": true,
        "diagnosticMode": "workspace",
        "typeCheckingMode": "basic"
    },
    "include": ["*.py"],
    "exclude": [
        "**/node_modules",
        "**/__pycache__",
        ".git"
    ]
}
